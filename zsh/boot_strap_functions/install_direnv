_install_direnv () {
  case $(_system) in
		Darwin*)
		  _installer_log "Installing mac direnv" "green"
		  brew install direnv
	  ;;
		Linux*)
		  _installer_log "Installing linux direnv" "$reset_color"
		  sudo apt-get install -y direnv >> raw_install.log 2>&1
		  _last_command_log "direnv"
	  ;;
  esac
}

install_direnv () {
  _which_check "direnv" "_install_direnv"
}
