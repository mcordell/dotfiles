_install_direnv () {
  case $(_system) in
		Darwin*)
		  _installer_log "Installing mac direnv" "green"
		  brew install direnv
	  ;;
		Linux*)
		  _installer_log "Installing linux bat" "green"
		  sudo apt-get install -y direnv
	  ;;
  esac
}

install_direnv () {
  _which_check "direnv" "_install_direnv"
}
