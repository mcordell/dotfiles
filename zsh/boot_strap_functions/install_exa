# vim: set ft=zsh:

_install_exa () {
	case $(_system) in
		Darwin*)
		  _installer_log "Installing mac exa" "green"
		  brew install exa
	  ;;
		Linux*)
		  _installer_log "Installing linux exa" "$reset_color"
		  sudo apt-get install -y exa >> raw_install.log 2>&1
		  _last_command_log "exa"
	  ;;
	esac
}

install_exa () {
  _which_check "exa" "_install_exa"
}
