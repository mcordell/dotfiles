# vim: set ft=zsh:

_install_exa () {
	case $(_system) in
		Darwin*)
		  _installer_log "Installing mac exa" "green"
		  brew install exa
	  ;;
		Linux*)
		  _installer_log "Installing linux exa" "green"
		  sudo apt-get install -y exa
		  if [[ ! $? ]]; then
			 _post_install_log "exa not installed properly" "red"
		  fi
	  ;;
	esac
}

install_exa () {
  _which_check "exa" "_install_exa"
}
