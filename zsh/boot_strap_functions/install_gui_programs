# vim: set ft=zsh:
source $(dirname "$0")/setup_repos

_install_macos_gui_programs () {
	wanted_casks=(
	'alfred'
	'basictex'
	'dash'
	'fantastical'
	'firefox'
	'hammerspoon'
	'iterm2-beta'
	'karabiner-elements'
	'mailmate'
	'notion'
	'slack'
	'spotify'
	'viscosity'
	'vlc'
	'xld'
	'zotero'
	)
	have=(${=$(brew list --cask)})
	need=(${wanted_casks:|have})
	if [ ${#need[@]} -eq 0 ]; then
	    _installer_log "All casks already installed" "$reset_color"
	else
		brew install $need
	fi
}

_install_linux_gui_programs () {
	_setup_spotify_repo
	_setup_1password_repo
	_setup_syncthing_repo
	_setup_albert_repo
	sudo apt-get update && sudo apt-get install spotify-client 1password albert syncthing vlc
}

install_gui_programs () {
   case $(_system) in
		Darwin*)
		  _installer_log "ðŸ–¥  Installing Mac GUI programs" "green" "bold"
		  INDENT="  "
		  _install_macos_gui_programs
	  ;;
		Linux*)
		  _install_linux_gui_programs
	  ;;
  esac
}
