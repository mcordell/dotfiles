[user]
	name = Michael Cordell
	email = surpher@gmail.com
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ir = rebase -i @{u}
	a = add
	c = commit
	s = status
	rh = reset HEAD
	cob = checkout -b
	co = checkout
	staged = diff --cached
	rc = rebase --continue
	dtc = diff --name-only HEAD HEAD~1
	df = diff --name-only
	compare = log --left-right --graph --cherry-pick --oneline --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --no-merges
[core]
	editor = vim
	excludesfile = /Users/michael/.gitignore_global
[push]
	default = simple
[github]
	user = mcordell
[merge]
	tool = fugitive
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
